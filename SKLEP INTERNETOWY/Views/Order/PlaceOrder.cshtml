@model SKLEP_INTERNETOWY.Models.Zamowienia

@{
    ViewData["Title"] = "Formularz Zamówienia";
}

<h2>Formularz zamówienia</h2>

<div>
    <form asp-controller="Order" asp-action="PlaceOrder" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="IdProduktu" class="control-label">Wybierz produkt:</label>
            <select asp-for="IdProduktu" class="form-control" asp-items="ViewBag.AvailableProducts"></select>
        </div>

        <div class="form-group">
            <label asp-for="Adres" class="control-label">Wpisz adres dostawy:</label>
            <input asp-for="Adres" class="form-control" />
            <span asp-validation-for="Adres" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="ZAMÓW" class="btn btn-primary" />
        </div>
    </form>
</div>
