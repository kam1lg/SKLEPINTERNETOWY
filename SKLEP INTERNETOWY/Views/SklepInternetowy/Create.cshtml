@model SKLEP_INTERNETOWY.Models.Produkty

@{
    ViewData["Title"] = "Create";
}

@{
    // Sprawdź, czy bieżący użytkownik ma rolę "admin"
    bool isAdmin = User.IsInRole("admin");
}

@if (isAdmin)
{
    <h1>DODAWNIE PRODUKTU</h1>

    <h4>Produkty</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nazwa" class="control-label"></label>
                    <input asp-for="Nazwa" class="form-control" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cena" class="control-label"></label>
                    <input asp-for="Cena" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Kategoria" class="control-label"></label>
                    <select asp-for="IdKategorii" asp-items="ViewBag.Categories" class="form-control">
                        <option value="">Wybierz kategorię</option>
                    </select>
                    <span asp-validation-for="IdKategorii" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Powrót do listy</a>
    </div>

    <section Scripts>
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    </section>
}
else
{
    <p>Brak uprawnień do dostępu do tej strony.</p>
}
